{"ast":null,"code":"import HotelDetailsCategories from \"@/components/HotelDetailsCategories\";\nimport ImageCarousel from \"@/components/ImageCarousel\";\nimport HotelDetailsSearch from \"@/components/HotelDetailsSearch\";\nimport HotelDetailsRatingScore from \"@/components/HotelDetailsRatingScore\";\nexport default {\n  name: \"HotelDetails\",\n  components: {\n    HotelDetailsRatingScore,\n    HotelDetailsSearch,\n    HotelDetailsCategories,\n    ImageCarousel\n  },\n\n  data() {\n    return {\n      description: 'Boasting a skylit indoor pool and 2 on-site dining options, this hotel is located across the ' + 'street from Union Station. The eco-friendly property is adjacent from an airport express train to ' + 'Toronto Pearson International Airport, 18 mi away. Lorem ipsum adem. Boasting a skylit indoor pool ' + 'and 2 on-site dining options, this hotel is located across the street from Union Station. ' + 'The eco-friendly property is adjacent from an airport express train to Toronto Pearson International ' + 'Airport, 18 mi away. Lorem ipsum adem.',\n      readMore: false,\n      readMoreFacilities: false,\n      rating: 5,\n      tags: ['Hotels with spa', 'Green Hotel', 'Bussines hotels', 'Sport hotels', 'Waller Creek District', 'Downtown Austin']\n    };\n  }\n\n};","map":{"version":3,"mappings":"AAmJA;AACA;AACA;AACA;AACA;EACAA,oBADA;EAEAC;IAAAC;IAAAC;IAAAC;IAAAC;EAAA,CAFA;;EAGAC;IACA;MACAC,+GACA,oGADA,GAEA,qGAFA,GAGA,4FAHA,GAIA,uGAJA,GAKA,wCANA;MAOAC,eAPA;MAQAC,yBARA;MASAC,SATA;MAUAC,OACA,iBADA,EAEA,aAFA,EAGA,iBAHA,EAIA,cAJA,EAKA,uBALA,EAMA,iBANA;IAVA;EAmBA;;AAvBA","names":["name","components","HotelDetailsRatingScore","HotelDetailsSearch","HotelDetailsCategories","ImageCarousel","data","description","readMore","readMoreFacilities","rating","tags"],"sourceRoot":"src/components","sources":["HotelDetails.vue"],"sourcesContent":["<template>\n    <section>\n        <section class=\"navigation\">\n            <b-container fluid class=\"navigation__back\">\n       